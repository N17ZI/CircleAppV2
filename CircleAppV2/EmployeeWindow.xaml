<Window x:Class="CircleAppV2.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CircleAppV2"
        mc:Ignorable="d"
        Title="EmployeeWindow" Height="450" Width="800">
    <DataGrid x:Name="workerDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding Tasks}" Margin="10">
        <DataGrid.Columns>
            <DataGridTextColumn x:Name="IdColumn" Binding="{Binding ID}" Header="ID_Taskk" Width="SizeToHeader"/>
            <DataGridTextColumn x:Name="Id2Column" Binding="{Binding ID_ServiceStaff}" Header="ID_ServiceStaff" Width="SizeToHeader"/>
            <DataGridTextColumn x:Name="Id3Column" Binding="{Binding Description}" Header="Descripton" Width="SizeToHeader"/>
            <DataGridTextColumn x:Name="DoneOrNo" Binding="{Binding DoneOrNo}" Header="DoneOrNo" Width="SizeToHeader"/>
            <DataGridTextColumn x:Name="DateTime" Binding="{Binding DateTime}" Header="DateTime" Width="SizeToHeader"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
